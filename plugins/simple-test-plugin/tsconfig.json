{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["ES2017", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "outDir": "dist",
    "declaration": false,
    "sourceMap": false,
    "removeComments": true,
    "module": "UMD",
    "jsx": "react"
  },
  "include": [
    "plugin.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "plugin.js"
  ]
}